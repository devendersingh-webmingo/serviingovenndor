<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_sender"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/avtar" />

        <RelativeLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_toLeftOf="@+id/iv_sender"
            android:background="@drawable/background_right"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/ll_sender"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_senderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="2dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim . "
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_sender"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/tvSenderAttachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="2dp"
                    android:text="View Attachment "
                    android:textColor="#757575"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvSenderTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="10:30"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    android:textStyle="normal" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_receiver"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/avtar" />

        <RelativeLayout
            android:id="@+id/rr_receiver"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:layout_toRightOf="@+id/iv_receiver"
            android:background="@drawable/background_left"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_receiverdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:padding="2dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim . "
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:textStyle="normal" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/_8sdp"
                >


                <TextView
android:layout_alignParentRight="true"
                    android:id="@+id/tv_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="2dp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:text="View Attachment "
                    android:textColor="#757575"

                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tvreceiverTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"

                    android:text="10:30"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    android:textStyle="normal" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>