<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBankview"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_2sdp">


                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_2sdp"
                    android:text=""
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvView"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/battom_view">

                <TextView
                    android:id="@+id/headingtop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_16sdp"
                    android:text=""
                    android:textColor="@color/textgrey"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headingtop"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_16sdp"
                    android:text=""
                    android:textColor="@color/textgrey"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/ivChat"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/heading"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/comment"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/heading"
                    android:layout_toRightOf="@+id/ivChat"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/document"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/eheading"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_16sdp"
                    android:text="Check Details"
                    android:textColor="@color/textColor"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eheading"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center_vertical"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_16sdp"
                    android:text=""
                    android:textColor="@color/textgrey"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>