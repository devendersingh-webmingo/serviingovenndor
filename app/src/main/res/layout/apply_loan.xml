<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tvAccount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:text="Vendor Name"

                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:visibility="gone"

                                    android:id="@+id/tvAccNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_below="@+id/tvAccount"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:text="Amit Kumar"
                                    android:textColor="@color/textgrey"
                                    android:textSize="12dp" />

                                <TextView
                                    android:visibility="gone"

                                    android:id="@+id/tvName"
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvAccNo"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:text="State"
                                    android:textSize="12sp" />

                                <TextView
                                    android:visibility="gone"

                                    android:textStyle="bold"
                                    android:id="@+id/tvAccountName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_below="@+id/tvName"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:text="Uttar Pradesh"
                                    android:textColor="@color/textgrey"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/tvAccHolder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvAccountName"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:text="Loan Amount"
                                    android:textSize="12sp" />

                                <EditText
                                    android:id="@+id/Amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_below="@+id/tvAccHolder"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:background="@drawable/editborder"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:hint="Enter Loan Amount"
                                    android:inputType="number"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:visibility="gone"

                                    android:id="@+id/tvAccount1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:text="Email"
                                    android:textSize="12sp" />

                                <TextView
                                    android:visibility="gone"

                                    android:textStyle="bold"

                                    android:id="@+id/tvAccNo1"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_below="@+id/tvAccount1"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:text="amitkumar@gmail.com"
                                    android:textColor="@color/textgrey"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/tvName1"
                                    android:layout_width="match_parent"
                                    android:visibility="gone"

                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvAccNo1"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:text="City"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tvAccountName1"
                                    android:visibility="gone"

                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_below="@+id/tvName1"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_6sdp"
                                    android:text="Lucknow"
                                    android:textColor="@color/textgrey"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvIFSC1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvAccountName1"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/_10sdp"
                                    android:text="Deduction(%)"
                                    android:textSize="15sp" />

                                <EditText
                                    android:id="@+id/dedAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_below="@+id/tvIFSC1"
                                    android:layout_marginTop="0dp"
                                    android:background="@drawable/editborder"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"

                                    android:hint="Enter Deduction Amount"
                                    android:inputType="number"
                                    android:paddingHorizontal="@dimen/_2sdp"
                                    android:textSize="12dp" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_below="@+id/dedAmount"
                                    android:fontFamily="@font/open_sans"
                                    android:gravity="center_vertical"

                                    android:text="Deduction in every Successfull Booking"
                                    android:textSize="10dp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/dedAmount"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:text="Loan Details"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tvdetail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_below="@+id/tvIFSC1"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:background="@drawable/editborder"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:hint="Detail Here "
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/ApplyNowLL"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_below="@+id/llCreadentials"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_40sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:background="@drawable/button"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:gravity="center"
                            android:text=" Apply Now "
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>