<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBankview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:background="@drawable/rectanglecard"

        android:elevation="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_5sdp"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAccountts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Total Lead Amount"
                android:paddingVertical="@dimen/_5sdp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAccNots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAccountts"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Expected Commission Received"
                android:paddingVertical="@dimen/_5sdp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvNamets"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvAccNots"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Expected Payout Date"
                android:textSize="15sp" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAccountrs"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="₹ 5000"
                android:paddingVertical="@dimen/_5sdp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvAccNo1s"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvAccountrs"
                android:textColor="#000000"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="₹ 5000"
                android:paddingVertical="@dimen/_5sdp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvUTRNumbers"
               android:layout_below="@+id/tvAccNo1s"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="2 Oct 2020 |12:00 PM"
                android:paddingVertical="@dimen/_5sdp"                                    android:textSize="15sp" />



        </RelativeLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>