                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lead Id"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"/>
                        <TextView
                            android:id="@+id/tvAccNo"
                            android:layout_below="@+id/tvAccount"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center_vertical"
                            android:textColor="@color/textgrey"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:text=""
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_below="@+id/tvAccNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Service date and Time"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"/>
                        <TextView
                            android:id="@+id/tvAccountName"
                            android:layout_below="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center_vertical"
                            android:textColor="@color/textgrey"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:textSize="14sp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text=""
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/tvAccHolder"
                            android:layout_below="@+id/tvAccountName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lead Status"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"/>


                        <LinearLayout
                            android:id="@+id/llLeadStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@+id/tvAccHolder"
                            android:background="@drawable/green_bg"
                            android:gravity="center"
                            android:layout_marginHorizontal="@dimen/_10sdp"

                            android:layout_centerVertical="true"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/tvorder"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:gravity="center"
                                android:text=" Success"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAccount1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order Amount"
                            android:gravity="right"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"/>
