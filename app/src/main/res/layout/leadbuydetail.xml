                            android:textColor="@color/textgrey"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text=""
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/tvNamea"
                            android:layout_below="@+id/tvAccNoa"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mob No "
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"/>
                        <TextView
                            android:id="@+id/tvAccountNamea"
                            android:layout_below="@+id/tvNamea"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center_vertical"
                            android:textColor="@color/textgrey"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:text=""
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/tvIFSC1a"
                            android:layout_below="@+id/tvAccountNamea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pincode"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/open_sans"/>


                        <TextView
                            android:id="@+id/tvPincode"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_40sdp"
                            android:gravity="center"
                            android:text=""
                            android:paddingHorizontal="@dimen/_10sdp"
                            android:textColor="@color/textgrey"
                            android:layout_below="@+id/tvIFSC1a"
                            android:textSize="14sp"
                            android:fontFamily="@font/open_sans"
                            />

