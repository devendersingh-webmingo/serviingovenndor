<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_icon_ionic_ios_arrow_round_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tvLoginMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center_vertical"

            android:text="Create Account"
            android:textColor="#000000"
            android:textSize="28sp" />
        <TextView
            android:id="@+id/tvheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up to get Started !"
            android:layout_below="@+id/tvLoginMobileNumber"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="#B4676767"
            android:textSize="18sp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            />
        <LinearLayout
            android:layout_marginVertical="@dimen/_20sdp"
            android:id="@+id/llCreadentials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvheading"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etmobilenumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:maxLength="10"
                android:inputType="number"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans_semibold"
                android:drawableRight="@drawable/ic_phone_call__1_"
                android:drawableTint="#787878"
                android:hint="Mobile number" />


        </LinearLayout>


        <TextView
            android:id="@+id/tvLoginWithPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/llCreadentials"
            android:layout_marginLeft="@dimen/_4sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="You will get OTP on this Number"
            android:textSize="16sp" />
        <View
            android:id="@+id/Viewe"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tvLoginWithPassword"
            android:background="#37000000"
            android:padding="2dp" />
        <RelativeLayout
            android:id="@+id/relaiveCB"
            android:layout_below="@+id/Viewe"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            >

            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp" />

            <TextView
                android:layout_toRightOf="@+id/cb2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:background="@null"
                android:hint="I accept all the Terms and Condition"
                android:inputType="number"
                android:textSize="12sp"
                android:gravity="center"
                android:textColorHint="@color/black"
                android:padding="@dimen/_5sdp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llSendOTP"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@+id/relaiveCB"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:background="@drawable/button"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:fontFamily="@font/open_sans"
                android:gravity="center"
                android:text=" SEND OTP"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSignin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_4sdp"

            android:gravity="center"
            android:text="@string/member"
            android:textColor="#80000000"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>