<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_3sdp"
    android:orientation="vertical">
     <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_5sdp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans"

                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Lead Id"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvAccount"
                android:layout_below="@+id/tvheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/textgrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAccNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/tvAccount"
                android:paddingHorizontal="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/textgrey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAccNo"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans"

                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Service date And Time"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/etDisbursed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvName"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/textgrey"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textSize="15sp" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAccount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans"

                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Buy Lead Cost"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAccNo1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvAccount1"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:text=""
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/textgrey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAccNo1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans"

                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Payment Method"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvAccountName1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvName1"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/open_sans"
                android:gravity="center_vertical"
                android:text="wallet"
                android:paddingHorizontal="@dimen/_5sdp"
                android:textColor="@color/textgrey"
                android:textSize="15sp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/movetoDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_icon_feather_arrow_right_circle"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
     </androidx.cardview.widget.CardView>
</LinearLayout>