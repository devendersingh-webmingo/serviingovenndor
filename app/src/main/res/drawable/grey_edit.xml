<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E4C4C4C" />
            <stroke android:color="#ffffff"
                android:width="1dp"
                />
            <corners
                android:topLeftRadius="@dimen/_5sdp" android:topRightRadius="@dimen/_5sdp"
                android:bottomLeftRadius="@dimen/_5sdp" android:bottomRightRadius="@dimen/_5sdp"  >
            </corners>
        </shape>
    </item>

    <item android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle"
            >
            <solid android:color="#E4FFFFFF" />
        </shape>
    </item>
</layer-list>